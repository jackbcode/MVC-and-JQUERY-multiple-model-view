
@model PolicyCheck.Models.CSpecifiedItem
@using PolicyCheck.Helper


@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<div class="SpecifiedItemsRow">

    @using (Html.BeginCollectionItem("SpecifiedItems"))
    {
        <div class="form-group whiteDiv">

            <div id="" class="wrapper8">
                <div class="form-group" style="float: left; width: 250px; margin-right:30px; margin-left:40px;">
                    <p class=" = font-weight-bold popOut">Item Category / Description</p>
                </div>
                <div class="form-group" style="float: left; width: 150px; margin-right:30px ">
                    <p class=" = font-weight-bold popOut"> Value</p>
                </div>
                <div class="form-group" style="float: left; width: 140px; margin-right:30px">
                    <p class=" = font-weight-bold popOut">Cover</p>
                </div>

            </div>
            <div id="allrisksTitle2" class="wrapper8">

                <div class="form-group" style="float: left; width: 250px; margin-right:30px ">
                    @Html.DropDownListFor(x => x.SpecifiedItemItemCategory, Model.ICD, "MS", new { @id = "buildingsContent", @class = "form-control" })
                </div>

                <div class="form-group" style="float: left; width: 150px; margin-right:30px ">
                    @Html.EditorFor(x => x.SpecifiedItemItemValue, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group" style="float: left; width: 150px; margin-right:30px ">
                    @Html.DropDownListFor(x => x.SpecifiedItemCover, Model.ItemCover, "MS", new { @id = "buildingsContent", @class = "form-control" })
                </div>

                <br /><br />

                <div class="form-group" style="float: left; width: 800px; margin-right:30px ">
                    @Html.TextAreaFor(x => x.SpecifiedItemItemDescription, 3, 20, htmlAttributes: new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
                </div>

                <br /><br />

                <div  class="wrapper8" style="padding-top: 10px;">
                    <div class="form-group" style="float: left; width: 75px; margin-right:45px">
                        <p class=" = font-weight-bold popOut">Deleted?</p>
                    </div>
                    <div class="form-group" style="float: left; width: 200px; ">
                        <p class=" = font-weight-bold popOut">Valuation Amount:</p>
                    </div>
                    <div class="form-group" style="float: left; width: 100px; margin-right:110px">
                        <p class=" = font-weight-bold popOut">Date:</p>
                    </div>
                    <div class="form-group" style="float: left; width: 200px; margin-right:30px">
                        <p class=" = font-weight-bold popOut">Territory</p>
                    </div>

                </div>

                <div class="form-group" style="float: left; width: 100px; margin-right:10px ">
                    @Html.DropDownListFor(x => x.SpecifiedItemDeleted, Model.YN, "MS", new { @id = "buildingsContent", @class = "form-control" })
                </div>

                <div class="form-group" style="float: left; width: 200px; margin-right:10px ">
                    @Html.EditorFor(x => x.SpecifiedItemValuationAmount, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group" style="float: left; width: 200px; margin-right:10px ">
                    @Html.EditorFor(x => x.SpecifiedItemDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group" style="float: left; width: 200px; margin-right:10px ">
                    @Html.DropDownListFor(x => x.SpecifiedItemTerritory, Model.ItemTerritory, "MS", new { @id = "buildingsContent", @class = "form-control" })
                </div>



            </div>
        </div>

        <br />




        @*<a href="#" class="deleteRow btn btn-primary">delete</a>*@
    }
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@section Scripts
{

}

